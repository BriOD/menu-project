<h1>  <%= @menu.name %> </h1> <%= link_to "Edit Menu", edit_menu_path %>

  <% @menu.categories.each do |category| %>
    <fieldset>
      <h2><%= link_to "#{category.name}", category_path(category) %> </h2>

        <% category.items.each do |item| %>
        <div>
          <%= item.name %> | <%= item.price %><br>
           <%= item.description %>
           <%= link_to "Edit Item", edit_item_path(item) %>
           <br>
        </div>
          <% end %>
          <%= link_to "Edit #{category.name}", edit_category_path(category) %>
    </fieldset>
    <% end %>
