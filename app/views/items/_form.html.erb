<%= form_for @item do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_area :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :price %>
  <%= f.text_area :price, class: "form-control" %>
</div>
  <%= f.submit "Create Item" %>


<% end %>
