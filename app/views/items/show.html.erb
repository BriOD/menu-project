<h1><%= @item.name %></h1>
  <%= @item.description %> <br>
  <%= @item.price %> <br>

  <!-- OPTION TO RATE OR COMMENT ON THIS ITEM -->
  <%= form_for @review, url: item_reviews_path(@item.id, @review)  do |f| %>
  <%= f.label :comment %>
  <%= f.text_area :comment %>
  <br>
  <%= f.label :rating %>
  <%= f.select :rating, options_for_select((1..5).to_a.map{|s| ["#{s} star".pluralize, s]}) %>

<% end %>




<!-- DISPLAYS THE COMMENTS ON THIS ITEM -->
  <% @item.reviews.each do |review| %>
  <ul>
    <li> <%= review.comment %></li>
  </ul>
  <% end %>



  <%= link_to "Edit Item", edit_item_path(@item) %>
